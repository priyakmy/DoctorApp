<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_05">

    <CheckBox
        android:id="@+id/cb_select_row_level_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/cb_selector"
        android:checked="false"
        android:enabled="true"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:visibility="gone"/>
    <ImageButton
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/plus"
        android:layout_toRightOf="@+id/cb_select_row_level_first"
        android:layout_marginLeft="@dimen/margin_05"/>


    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/indicator"
        android:layout_toLeftOf="@+id/tv_test_cost"
        android:layout_marginRight="5dp"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="Test"
        android:textSize="@dimen/text_16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_test_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/lab_test_cost_bg"
        android:text=""
        android:textColor="@color/white" />
</RelativeLayout>


